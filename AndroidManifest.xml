<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devmite.rubik"
    android:versionCode="6"
    android:versionName="1.2.3" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <!-- Google Mobile Ads permissions. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Rubik" >
  
        <meta-data android:name="com.google.android.gms.version" android:value="6171000" />
  
        <activity
            android:name="com.devmite.rubik.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.devmite.rubik.activity.PracticeActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.devmite.rubik.activity.UserSettingsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
        android:name="com.devmite.rubik.activity.AboutDevActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.devmite.rubik.activity.GraphActivity"
            android:label="@string/app_name" >
        </activity>
        <!-- Google Mobile Ads activity. -->
        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        
    </application>

</manifest>